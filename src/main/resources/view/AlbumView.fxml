<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="view.AlbumController" spacing="10" padding="10">
    <HBox spacing="10">
        <TextField fx:id="photoPathField" promptText="Photo Path"/>
        <Button text="Add Photo" onAction="#handleAddPhoto"/>
        <Button text="Remove Photo" onAction="#handleRemovePhoto"/>
    </HBox>
    <ListView fx:id="photoListView"/>
    <HBox spacing="10">
        <Button text="Caption Photo" onAction="#handleCaptionPhoto"/>
        <Button text="Tag Photo" onAction="#handleTagPhoto"/>
        <Button text="Delete Tag" onAction="#handleDeleteTag"/>
    </HBox>
    <HBox spacing="10">
        <Button text="Copy Photo" onAction="#handleCopyPhoto"/>
        <Button text="Move Photo" onAction="#handleMovePhoto"/>
    </HBox>
    <HBox spacing="10">
        <Button text="Search Photos" onAction="#handleSearchPhotos"/>
        <Button text="Slideshow" onAction="#handleSlideshow"/>
    </HBox>
    <Button text="Back to Albums" onAction="#handleBackToAlbums"/>
</VBox>